@page "/"

<PageTitle>Home</PageTitle>

<div class="text-center">
    <h1 class="display-4">Welcome to User Management</h1>
    <p class="lead">A simple application to manage users and track their activities.</p>
    
    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2>👥</h2>
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">View, create, edit, and manage users.</p>
                    <a href="/users" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h2>📝</h2>
                    <h5 class="card-title">Activity Logs</h5>
                    <p class="card-text">Track user activities and system logs.</p>
                    <a href="/logs" class="btn btn-secondary">View Logs</a>
                </div>
            </div>
        </div>
    </div>
</div>
