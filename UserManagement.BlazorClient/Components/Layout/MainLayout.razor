@inherits LayoutComponentBase

<div class="d-flex">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary flex-column" style="width: 250px; min-height: 100vh;">
        <div class="container-fluid flex-column align-items-start">
            <a class="navbar-brand mb-3" href="/">
                <strong>User Management</strong>
            </a>
            <NavMenu />
        </div>
    </nav>

    <main class="flex-grow-1">
        <div class="container-fluid p-4">
            @Body
        </div>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet class="alert alert-danger position-fixed bottom-0 end-0 m-3" style="display: none;">
    An unhandled error has occurred.
    <a href="." class="btn btn-sm btn-outline-danger ms-2">Reload</a>
    <button class="btn-close ms-2" onclick="document.getElementById('blazor-error-ui').style.display='none'"></button>
</div>
