@model UserManagement.Web.Models.Users.UserDetailsViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="row">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>@ViewData["Title"]</h2>
        </div>

        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="fas fa-user"></i> @Model.FullName
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success ms-2">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary ms-2">Inactive</span>
                    }
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Id):</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Forename):</dt>
                            <dd class="col-sm-8">@Model.Forename</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Surname):</dt>
                            <dd class="col-sm-8">@Model.Surname</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email):</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateOfBirth):</dt>
                            <dd class="col-sm-8">
                                @if (Model.DateOfBirth.HasValue)
                                {
                                    @Html.DisplayFor(model => model.DateOfBirth)
                                    @if (Model.Age.HasValue)
                                    {
                                        <small class="text-muted">(Age: @Model.Age)</small>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Not specified</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity Section -->
        <div class="card mt-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-history"></i> Recent Activity
                </h5>
                <a asp-controller="Logs" asp-action="UserLogs" asp-route-userId="@Model.Id" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-list"></i> View All Logs
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentLogs.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Action</th>
                                    <th>Details</th>
                                    <th>Time</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.RecentLogs)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-info">@log.Action</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(log.Details))
                                            {
                                                <span>@(log.Details.Length > 50 ? log.Details.Substring(0, 50) + "..." : log.Details)</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No details</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted" title="@log.Timestamp.ToString("dddd, dd MMMM yyyy 'at' HH:mm:ss")">
                                                @log.TimeAgo
                                            </small>
                                        </td>
                                        <td>
                                            <a asp-controller="Logs" asp-action="Details" asp-route-id="@log.Id" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-history fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No recent activity found for this user.</p>
                    </div>
                }
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="List" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit User
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete User
            </a>
        </div>
    </div>
</div>
