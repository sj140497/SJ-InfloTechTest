@model UserManagement.Web.Models.Logs.UserLogDetailsViewModel

@{
    ViewData["Title"] = "Log Details";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-file-alt"></i> @ViewData["Title"]
            </h2>
        </div>

        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="fas fa-history"></i> Activity Log #@Model.Id
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Log ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UserName):</dt>
                            <dd class="col-sm-8">
                                <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId" class="text-decoration-none">
                                    @Model.UserName
                                </a>
                                <small class="text-muted d-block">User ID: @Model.UserId</small>
                            </dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Action):</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info fs-6">@Model.Action</span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Timestamp):</dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Timestamp)
                            </dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TimeAgo):</dt>
                            <dd class="col-sm-8">
                                <span class="text-muted">@Model.TimeAgo</span>
                            </dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Details))
                {
                    <hr class="my-4">
                    <div class="row">
                        <div class="col-12">
                            <h6 class="mb-3">@Html.DisplayNameFor(model => model.Details):</h6>
                            <div class="p-3 bg-light border rounded">
                                <pre class="mb-0" style="white-space: pre-wrap; font-family: inherit;">@Model.Details</pre>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="List" class="btn btn-secondary">
                <i class="fas fa-list"></i> Back to All Logs
            </a>
            <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-primary">
                <i class="fas fa-user"></i> View User
            </a>
            <a asp-action="UserLogs" asp-route-userId="@Model.UserId" class="btn btn-outline-primary">
                <i class="fas fa-history"></i> User's Activity
            </a>
        </div>
    </div>
</div>
