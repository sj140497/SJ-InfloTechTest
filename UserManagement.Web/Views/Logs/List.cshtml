@model UserManagement.Web.Models.Logs.UserLogListViewModel

@{
    ViewData["Title"] = "Activity Logs";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-list"></i> @ViewData["Title"]
                @if (!string.IsNullOrEmpty(ViewData["UserName"]?.ToString()))
                {
                    <small class="text-muted">for @ViewData["UserName"]</small>
                }
            </h2>
            @if (!string.IsNullOrEmpty(ViewData["UserId"]?.ToString()))
            {
                <a asp-controller="Users" asp-action="Details" asp-route-id="@ViewData["UserId"]" class="btn btn-secondary">
                    <i class="fas fa-user"></i> Back to User
                </a>
            }
        </div>

        <!-- Filter Section -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" asp-action="List">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="userId" class="form-label">Filter by User ID:</label>
                            <input type="number" id="userId" name="userId" class="form-control" value="@Model.FilterUserId" placeholder="Enter User ID">
                        </div>
                        <div class="col-md-4">
                            <label for="action" class="form-label">Filter by Action:</label>
                            <input type="text" id="action" name="action" class="form-control" value="@Model.FilterAction" placeholder="Enter action name">
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                            <a asp-action="List" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Results -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    Logs (@Model.TotalCount total)
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Items.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Action</th>
                                    <th>Details</th>
                                    <th>Time</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Users" asp-action="Details" asp-route-id="@log.UserId" class="text-decoration-none">
                                                @log.UserName
                                            </a>
                                            <small class="text-muted d-block">ID: @log.UserId</small>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@log.Action</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(log.Details))
                                            {
                                                <span title="@log.Details">
                                                    @(log.Details.Length > 50 ? log.Details.Substring(0, 50) + "..." : log.Details)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No details</span>
                                            }
                                        </td>
                                        <td>
                                            <span title="@log.Timestamp.ToString("dddd, dd MMMM yyyy 'at' HH:mm:ss")">
                                                @log.TimeAgo
                                            </span>
                                            <small class="text-muted d-block">@log.Timestamp.ToString("dd/MM/yyyy HH:mm")</small>
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@log.Id" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No logs found</h5>
                        <p class="text-muted">Try adjusting your filters or check back later.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
